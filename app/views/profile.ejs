<div class="profile-header">
  <h1><i class="fas fa-user-circle"></i> User Profile</h1>
  <p>Manage your account information</p>
</div>

<% if (typeof success !== 'undefined' && success) { %>
  <div class="success-alert">
    <i class="fas fa-check-circle"></i>
    Password updated successfully!
  </div>
<% } %>

<div class="profile-container">
  <div class="card profile-card">
    <div class="profile-avatar">
      <div class="avatar">
        <%= user.username.charAt(0).toUpperCase() %>
      </div>
    </div>
    
    <div class="profile-info">
      <h2><%= user.username %></h2>
      
      <div class="info-item">
        <div class="info-label">
          <i class="fas fa-envelope"></i> Email
        </div>
        <div class="info-value">
          <%= user.email %>
        </div>
      </div>
      
      <div class="info-item">
        <div class="info-label">
          <i class="fas fa-user-shield"></i> Account ID
        </div>
        <div class="info-value">
          #<%= user.id %>
        </div>
      </div>
    </div>
  </div>
  
  <div class="card actions-card">
    <h2>Account Actions</h2>
    
    <div class="action-buttons">
      <a href="/change-password" class="action-button">
        <i class="fas fa-key"></i>
        <span>Change Password</span>
      </a>
      
      <a href="/dashboard" class="action-button">
        <i class="fas fa-tachometer-alt"></i>
        <span>Dashboard</span>
      </a>
      
      <a href="/gallery" class="action-button">
        <i class="fas fa-images"></i>
        <span>My Gallery</span>
      </a>
      
      <a href="/logout" class="action-button logout">
        <i class="fas fa-sign-out-alt"></i>
        <span>Logout</span>
      </a>
    </div>
  </div>
</div>

<style>
  .profile-header {
    text-align: center;
    margin-bottom: 2rem;
  }
  
  .profile-header p {
    color: rgba(0,0,0,0.6);
    margin-top: -0.5rem;
  }
  
  .success-alert {
    background: rgba(52, 199, 89, 0.1);
    color: #34c759;
    padding: 12px 16px;
    border-radius: 8px;
    margin-bottom: 1.5rem;
    display: flex;
    align-items: center;
    gap: 8px;
  }
  
  .profile-container {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 1.5rem;
  }
  
  .profile-card {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 2rem;
  }
  
  .profile-avatar {
    margin-bottom: 1.5rem;
  }
  
  .avatar {
    width: 120px;
    height: 120px;
    background: linear-gradient(135deg, #0071e3, #00c6fb);
    color: white;
    font-size: 3rem;
    font-weight: 600;
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
    box-shadow: 0 10px 20px rgba(0, 113, 227, 0.2);
    position: relative;
    overflow: hidden;
  }
  
  .avatar::before {
    content: '';
    position: absolute;
    top: -20%;
    left: -20%;
    width: 140%;
    height: 140%;
    background: linear-gradient(45deg, rgba(255,255,255,0.2) 0%, rgba(255,255,255,0) 60%);
    transform: rotate(25deg);
  }
  
  .profile-info {
    width: 100%;
    text-align: center;
  }
  
  .profile-info h2 {
    margin-bottom: 1.5rem;
    font-size: 1.8rem;
  }
  
  .info-item {
    margin-bottom: 1rem;
    padding: 1rem;
    background: rgba(255, 255, 255, 0.3);
    border-radius: 8px;
    backdrop-filter: blur(5px);
    transition: all 0.3s ease;
  }
  
  .info-item:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 15px rgba(0, 0, 0, 0.05);
  }
  
  .info-label {
    font-size: 0.9rem;
    color: rgba(0, 0, 0, 0.5);
    margin-bottom: 8px;
    display: flex;
    align-items: center;
    gap: 5px;
  }
  
  .info-value {
    font-weight: 500;
    color: var(--text-color);
    font-size: 1.1rem;
  }
  
  .actions-card {
    padding: 2rem;
  }
  
  .actions-card h2 {
    margin-bottom: 1.5rem;
    text-align: center;
  }
  
  .action-buttons {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1rem;
  }
  
  .action-button {
    background: rgba(255, 255, 255, 0.3);
    color: var(--text-color);
    padding: 1rem;
    border-radius: 8px;
    text-decoration: none;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
    transition: all 0.3s ease;
    backdrop-filter: blur(5px);
    text-align: center;
  }
  
  .action-button i {
    font-size: 1.5rem;
    color: var(--accent-color);
    width: 50px;
    height: 50px;
    background: rgba(0, 113, 227, 0.1);
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
    transition: all 0.3s ease;
  }
  
  .action-button span {
    font-weight: 500;
  }
  
  .action-button:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.05);
    text-decoration: none;
  }
  
  .action-button:hover i {
    background: var(--accent-color);
    color: white;
  }
  
  .logout {
    border: 1px solid rgba(255, 59, 48, 0.3);
  }
  
  .logout i {
    color: #ff3b30;
    background: rgba(255, 59, 48, 0.1);
  }
  
  .logout:hover i {
    background: #ff3b30;
    color: white;
  }
  
  @media (max-width: 768px) {
    .profile-container {
      grid-template-columns: 1fr;
    }
    
    .action-buttons {
      grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    }
  }
  
  @keyframes float {
    0% { transform: translateY(0px); }
    50% { transform: translateY(-10px); }
    100% { transform: translateY(0px); }
  }
  
  .avatar {
    animation: float 6s ease-in-out infinite;
  }
</style> 