    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 2rem;
  }
  
  .back-btn {
    display: flex;
    align-items: center;
    gap: 8px;
    color: rgba(0, 0, 0, 0.6);
    transition: all 0.3s ease;
    text-decoration: none;
    font-weight: 500;
  }
  
  .back-btn:hover {
    color: var(--accent-color);
