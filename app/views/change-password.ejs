<div class="form-header">
  <h1><i class="fas fa-key"></i> Change Password</h1>
  <p>Update your account password</p>
</div>

<div class="form-container">
  <div class="card form-card">
    <% if (typeof error !== 'undefined' && error) { %>
      <div class="error-alert">
        <i class="fas fa-exclamation-circle"></i>
        <%= error %>
      </div>
    <% } %>

    <form action="/change-password" method="POST">
      <div class="form-group">
        <label for="currentPassword">
          <i class="fas fa-lock"></i>
          Current Password
        </label>
        <input type="password" id="currentPassword" name="currentPassword" placeholder="Enter your current password" required>
      </div>
      
      <div class="form-group">
        <label for="newPassword">
          <i class="fas fa-key"></i>
          New Password
        </label>
        <input type="password" id="newPassword" name="newPassword" placeholder="Create a new password" required>
        <div class="password-strength-meter">
          <div class="meter-bar"></div>
        </div>
      </div>
      
      <div class="form-actions">
        <a href="/profile" class="back-btn">
          <i class="fas fa-arrow-left"></i>
          Back to Profile
        </a>
        <button type="submit" class="submit-btn">
          <i class="fas fa-check"></i>
          Update Password
        </button>
      </div>
    </form>
  </div>
  
  <div class="card tips-card">
    <div class="card-header">
      <i class="fas fa-shield-alt"></i>
      <h3>Password Tips</h3>
    </div>
    
    <div class="tips-content">
      <ul class="tips-list">
        <li>
          <i class="fas fa-check-circle"></i>
          <span>Use at least 8 characters</span>
        </li>
        <li>
          <i class="fas fa-check-circle"></i>
          <span>Include uppercase and lowercase letters</span>
        </li>
        <li>
          <i class="fas fa-check-circle"></i>
          <span>Include numbers and special characters</span>
        </li>
        <li>
          <i class="fas fa-check-circle"></i>
          <span>Avoid using personal information</span>
        </li>
        <li>
          <i class="fas fa-check-circle"></i>
          <span>Don't reuse passwords from other sites</span>
        </li>
      </ul>
    </div>
  </div>
</div>

<style>
