    margin-bottom: 1.5rem;
  }
  
  .form-group label {
    display: flex;
    align-items: center;
    gap: 8px;
    margin-bottom: 8px;
    font-weight: 500;
    color: rgba(0, 0, 0, 0.7);
  }
  
  .form-group label i {
    color: var(--accent-color);
  }
  
  .form-group input {
    width: 100%;
    padding: 12px 16px;
    background: rgba(255, 255, 255, 0.5);
    border: none;
    border-radius: 8px;
    font-size: 1rem;
    transition: all 0.3s ease;
    box-shadow: inset 0 2px 5px rgba(0, 0, 0, 0.05);
